{
  "name": "ensure-oxford-commas",
  "version": "0.1.0",
  "description": "Ensure or discover if Oxford commas are being used in English language text.",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "keywords": [
    "Oxford",
    "serial",
    "comma",
    "English",
    "grammar"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kendaleiv/ensure-oxford-commas"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit && npm outdated --depth 0",
    "coverage": "nyc --require babel-core/register --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src test",
    "test": "ava",
    "test:watch": "chokidar 'test/*.js' 'src/**' -c 'npm test' --silent --initial",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate && npm run check"
  },
  "author": {
    "name": "Ken Dale",
    "email": "ken@kendaleiv.com",
    "url": "http://kendaleiv.com"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0",
    "babel-plugin-transform-function-bind": "^6.5.2",
    "babel-preset-es2015": "^6.3.13",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.6",
    "eslint": "^3.2.2",
    "nsp": "^2.2.0",
    "nyc": "^7.1.0"
  }
}
